<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HotelTest" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="buttonStyle">@style/Widget.HotelTest.Button</item>
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="Theme.HotelTest" parent="Base.Theme.HotelTest" />

    <style name="mToolbar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
    </style>

    <style name="ShapeAppearance.HotelTest" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name = "mTextInput" parent = "Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/TextRegular16.Addition</item>
        <item name="shapeAppearance">@style/ShapeAppearance.HotelTest</item>
        <item name="boxBackgroundColor">@color/background</item>
        <item name="errorEnabled">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="cursorColor">@color/black</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="colorErrorContainer">@color/error</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="hintTextColor">@color/gray_hint</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>